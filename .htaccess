<IfModule mod_rewrite.c>
    RewriteEngine On

    # -----------------------------------------
    # ðŸ”’ Force HTTPS
    # -----------------------------------------
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # -----------------------------------------
    # ðŸŸ¦ Public asset fix
    # Allows URLs like: /admin/js/... /admin/css/... without /public
    # -----------------------------------------
    RewriteCond %{REQUEST_URI} ^/admin/
    RewriteRule ^admin/(.*)$ public/admin/$1 [L]

    # -----------------------------------------
    # ðŸ“¦ Storage asset fix
    # Allows URLs like: /storage/... (Laravel symlink)
    # -----------------------------------------
    RewriteCond %{REQUEST_URI} ^/storage/
    RewriteRule ^storage/(.*)$ public/storage/$1 [L]

    # -----------------------------------------
    # ðŸš« Disable directory listing + MultiViews
    # -----------------------------------------
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    # -----------------------------------------
    # ðŸ”‘ Authorization header handling
    # -----------------------------------------
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # -----------------------------------------
    # ðŸ§¹ Remove trailing slashes
    # -----------------------------------------
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # -----------------------------------------
    # ðŸš€ Laravel front controller
    # -----------------------------------------
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
